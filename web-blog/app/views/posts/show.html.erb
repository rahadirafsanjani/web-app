<p style="color: green"><%= notice %></p>

<%= render @post %>
<div class="pb-2">
  <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-primary btn-sm" %> |
  <%= link_to "Back to posts", posts_path, class: "btn btn-primary btn-sm" %>
</div>
<div class="pb-5">
  <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger btn-sm" %>
</div>
<br/>
<div>
  <%= render 'comments/comment', comment: @comment %>
  <%= render 'comments/form', comment: @comment %>
</div>

